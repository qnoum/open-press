{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "lib": [
      "esnext",
      "dom"
    ],
    "outDir": "addon",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "esModuleInterop": true
  }
}
